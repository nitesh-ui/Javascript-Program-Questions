let arr = [1, 3, 6, 2, 5, 10];

let first = [];
let second = [];

for(let i = 0; i < arr.length; i++) {
  if(i % 2) {
    first.push(arr[i]);
  }
  else {
    second.push(arr[i]);
  }
}

console.log(first);
console.log(second);

let sum = 0;
first.forEach(item => sum += item);
console.log(sum);

let sumOne = 0;
second.forEach(item => sumOne += item);
console.log(sumOne);
